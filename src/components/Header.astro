<header
  class="bg-forge-dark/80 backdrop-blur-sm sticky top-0 z-50 border-b border-white/10"
>
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <a
      href={`${import.meta.env.BASE_URL}`}
      class="flex items-center gap-2 no-underline hover:no-underline"
    >
      <img src="/cfsyndicate/owl.svg" alt="Owl Logo" class="w-8 h-8" />
      <span class="font-bold text-white text-lg">Concord Forge Syndicate</span>
    </a>

    <div class="hidden md:flex items-center gap-6 text-sm">
      <a
        href={`${import.meta.env.BASE_URL}/aviary`}
        class="text-forge-text hover:text-forge-accent transition-colors no-underline"
        >Aviary</a
      >
      <a
        href={`${import.meta.env.BASE_URL}/showcase`}
        class="text-forge-text hover:text-forge-accent transition-colors no-underline"
        >Showcase</a
      >
      <a
        href={`${import.meta.env.BASE_URL}/about`}
        class="text-forge-text hover:text-forge-accent transition-colors no-underline"
        >About Us</a
      >
      <a
        href={`${import.meta.env.BASE_URL}/contact`}
        class="text-forge-text hover:text-forge-accent transition-colors no-underline"
        >Contact</a
      >
      <div class="flex items-center gap-4">
        <a href="https://x.com/cfsyndicate" target="_blank">
          <svg
            role="img"
            class="text-forge-accent w-5 h-5"
            fill="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            ><title>X</title><path
              d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"
            ></path></svg
          >
        </a>
        <a href="https://cfsyndicate.bsky.social" target="_blank">
          <svg
            role="img"
            class="text-forge-accent w-5 h-5"
            fill="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            ><title>Bluesky</title><path
              d="M12 10.8c-1.087-2.114-4.046-6.053-6.798-7.995C2.566.944 1.561 1.266.902 1.565.139 1.908 0 3.08 0 3.768c0 .69.378 5.65.624 6.479.815 2.736 3.713 3.66 6.383 3.364.136-.02.275-.039.415-.056-.138.022-.276.04-.415.056-3.912.58-7.387 2.005-2.83 7.078 5.013 5.19 6.87-1.113 7.823-4.308.953 3.195 2.05 9.271 7.733 4.308 4.267-4.308 1.172-6.498-2.74-7.078a8.741 8.741 0 0 1-.415-.056c.14.017.279.036.415.056 2.67.297 5.568-.628 6.383-3.364.246-.828.624-5.79.624-6.478 0-.69-.139-1.861-.902-2.206-.659-.298-1.664-.62-4.3 1.24C16.046 4.748 13.087 8.687 12 10.8Z"
            ></path></svg
          >
        </a>
      </div>
    </div>
    <div class="md:hidden flex items-center">
      <button id="menu-toggle" class="forge-btn forge-btn-primary">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </nav>
  <div id="mobile-menu" class="hidden md:hidden">
    <a
      href={`${import.meta.env.BASE_URL}/aviary`}
      class="block py-2 px-4 text-sm text-white hover:bg-gray-700">Aviary</a
    >
    <a
      href={`${import.meta.env.BASE_URL}/showcase`}
      class="block py-2 px-4 text-sm text-white hover:bg-gray-700">Showcase</a
    >
    <a
      href={`${import.meta.env.BASE_URL}/about`}
      class="block py-2 px-4 text-sm text-white hover:bg-gray-700">About Us</a
    >
    <a
      href={`${import.meta.env.BASE_URL}/contact`}
      class="block py-2 px-4 text-sm text-white hover:bg-gray-700">Contact</a
    >
    <div class="flex items-center gap-4 p-4">
      <a href="https://x.com/cfsyndicate" target="_blank">
        <svg
          role="img"
          class="text-forge-accent w-5 h-5"
          fill="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          ><title>X</title><path
            d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"
          ></path></svg
        >
      </a>
      <a href="https://cfsyndicate.bsky.social" target="_blank">
        <svg
          role="img"
          class="text-forge-accent w-5 h-5"
          fill="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          ><title>Bluesky</title><path
            d="M12 10.8c-1.087-2.114-4.046-6.053-6.798-7.995C2.566.944 1.561 1.266.902 1.565.139 1.908 0 3.08 0 3.768c0 .69.378 5.65.624 6.479.815 2.736 3.713 3.66 6.383 3.364.136-.02.275-.039.415-.056-.138.022-.276.04-.415.056-3.912.58-7.387 2.005-2.83 7.078 5.013 5.19 6.87-1.113 7.823-4.308.953 3.195 2.05 9.271 7.733 4.308 4.267-4.308 1.172-6.498-2.74-7.078a8.741 8.741 0 0 1-.415-.056c.14.017.279.036.415.056 2.67.297 5.568-.628 6.383-3.364.246-.828.624-5.79.624-6.478 0-.69-.139-1.861-.902-2.206-.659-.298-1.664-.62-4.3 1.24C16.046 4.748 13.087 8.687 12 10.8Z"
          ></path></svg
        >
      </a>
    </div>
  </div>
</header>

<script>
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");

  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }
</script>
